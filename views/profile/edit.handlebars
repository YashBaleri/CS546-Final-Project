<script src="/public/js/edit.js"></script>
<div id="error" hidden>
    <p class="p1">Wrong Input!</p>
</div>
<form method="post" id= "myForm2" action="/edit"  enctype="multipart/form-data">
  <div>
    <label for="name">Name:</label>
    <input id="name" type="text" name="name" value="{{user.name}}">
  </div>
  <div>
    <label for="age">Age:</label>
    <input type="number" id="age" name="age" value="{{user.age}}">
  </div>


  <div>
    <label for="zip_code"> Update your Zip code to update your location:</label>
    <input type="number" id="zip_code" name="zip_code" value="{{user.zip}}">
  </div>

  <div>
    <label for="bio">Bio:</label>
    <textarea id="bio" name="bio">{{user.bio}}</textarea>
  </div>
  <div>
    <label for="image">Profile image:</label>
    <input type="file" id="image" name="image">
  </div><br><br>

  <div>
    <label for="gender">Gender:</label>
    <select id="gender" name="gender">
      <option value="select-gender">Select Gender</option>
      <option value="male">Male</option>
      <option value="female">Female</option>
      <option value="other">Other</option>
      <option value="prefer not to say">Prefer not to say</option>

    </select><br><br>
  </div>

  <div>

    <label for="colleges">University:</label>
    <select id="colleges" name="colleges"></select><br><br>
  </div>

  <div>

    <label for="company">Place of Work: eg- Google</label>
    <input type="text" id="company" name="company" ><br><br>
  </div>

  <div>
    <label for="places-dropdown">A place you want to visit:</label>
    <select id="places-dropdown"></select><br><br>
  </div>

  <div>
    <label for="gyms-dropdown">Your gym/classes:</label>
    <select id="gyms-dropdown">
    </select><br><br>
  </div>
  <div>
    <button type="submit">Save changes</button>
    <a href="/profile/{{user._id}}">Cancel</a>
  </div>
</form>
