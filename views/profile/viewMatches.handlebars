<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h1>Potential Match Profile</h1>
        </div>
        <div class="card-body">
          {{#if user.image.path}}
            <img src="/{{user.image.destination}}/{{user.image.filename}}" alt="Profile image">
          {{else}}
            <p>No image uploaded</p>
          {{/if}}
          <p>Name: {{user.name}}</p>
          <p>Age: {{user.age}}</p>
          <p>City: {{user.city_name}}</p>
          <p>Bio: {{user.bio}}</p>
          {{#if user.university}}
            <p>{{user.name}} goes/went to <strong>{{{user.university}}}</strong></p>
          {{/if}}
          {{#if user.work}}
            <p>{{user.name}} works at <strong>{{user.work}}</strong></p>
          {{/if}}
          {{#if user.gym}}
            <p>{{user.name}} works out at <strong>{{user.gym}}</strong></p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>


