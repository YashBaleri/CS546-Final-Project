<div class="container">
  <div class="row">
    <div class="col text-center">
      <div id="distanceToggleContainer">
        <button class="btn btn-primary" id="showAllProfilesButton" onclick="showAllProfiles()">Show all profiles with some commonality</button>
        <button class="btn btn-primary" id="showWithin5kmButton" onclick="showProfilesWithin5km()">Show profiles within 5km radius only</button>
      </div>
    </div>
  </div>
