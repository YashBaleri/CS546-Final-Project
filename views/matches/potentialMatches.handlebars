<style>
  .like-dislike-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
}

.like-button, .dislike-button {
  width: 120px;
  height: 50px;
  margin: 0;
  font-size: 18px;
  font-weight: bold;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.like-button {
  background-color: #004b02;
}

.dislike-button {
  background-color: #a40b00;
}

.like-button:hover, .dislike-button:hover {
  transform: scale(1.1);
}


  .profile-pix {
  width: 300px; /* increase the width to 300px */
  height: 300px; /* increase the height to 300px */
  object-fit: cover;
  border-radius: 50%;
  margin: 0 auto; /* center the image horizontally */
  display: block; /* make the image a block element */
  margin-bottom: 20px;
}

  .card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 50px auto;
  padding: 30px;
  background-color: #f2f2f2;
  border-radius: 10px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
  }

  .common-attribute {
    background-color: #f0f76a;
    color: #000000f9;
  }
</style>


