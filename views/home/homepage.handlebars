<div class="card text-center">
    <div class="card-header">
        <h3 class="mb-0">The Meetup Web-App</h3>
    </div>
    <div class="card-body">
        <h5 class="card-title">Meet Someone!</h5>
        <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h1 class="display-4">Welcome to our app!</h1>
                        </div>
                        <div class="card-body">
                            <p class="lead">You have successfully logged in.</p>
                            <hr class="my-4">
                            <div class="row">
                                <div class="col-12 col-sm-6 mb-3">
                                    <a href="/home/{{user._id}}" class="btn btn-outline-dark btn-block btn-lg">Homepage</a>
                                </div>
                                <div class="col-12 col-sm-6 mb-3">
                                    <a href="/matches/{{user._id}}" class="btn btn-outline-dark btn-block btn-lg">Matches</a>
                                </div>
                                <div class="col-12 col-sm-6 mb-3">
                                    <a href="/potentialMatches/{{user._id}}?distance=all" class="btn btn-outline-dark btn-block btn-lg">Potential Matches</a>
                                </div>
                                <div class="col-12 col-sm-6 mb-3">
                                    <a href="/profile/{{user._id}}" class="btn btn-outline-dark btn-block btn-lg">Profile</a>
                                </div>
                                <div class="col-12 col-sm-6 mb-3">
                                    <a href="/messages/{{user._id}}/messages" class="btn btn-outline-dark btn-block btn-lg">Messages</a>
                                </div>
                                <div class="col-12 col-sm-6 mb-3">
                                    <a href="/delete/{{user._id}}" class="btn btn-outline-dark btn-block btn-lg">Delete Account</a>
                                </div>
                                <div class="col-12 col-sm-6 mb-3">
                                    <a href="/logout" class="btn btn-outline-dark btn-block btn-lg">Logout</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer text-muted">
        2023
    </div>
</div>

<script src="/public/js/homepage_delete.js"></script>
